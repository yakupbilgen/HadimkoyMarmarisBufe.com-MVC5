            <form>
                <div class="form-group">
                    <div class="row m-2">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Adınız" required="" name="ad" />
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Soyadınız" required="" name="soyad" />
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col">
                            <input type="email" class="form-control" placeholder="Mail" required="" name="email" />
                        </div>
                    </div>
