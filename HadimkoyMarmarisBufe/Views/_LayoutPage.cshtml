                    <li class="nav-item m-1">
                        <a class="nav-link" href="Neredeyiz">Neredeyiz?</a>
                    </li>
                    <li class="nav-item m-1">
                        <a class="nav-link" href="Hakkimizda">Hakkımızda</a>
                    </li>

                    <li class="nav-item m-1">
                        <a class="nav-link" href="Iletisim">İletişim</a>
                    </li>
                </ul>
            </nav>
        </section>
        <div>
            <br />
            @RenderBody()
            <br />
        </div>
        <footer class="col-12 text-center text-warning" style="background-color:black;">
            <h5>&copy; Hadımköy Marmaris Büfe @DateTime.Now.Year</h5>
